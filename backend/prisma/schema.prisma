generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categorie {
  id    String @id @default(uuid())
  name  String @unique
  image String
  Jobs  Job[]
}

model Job {
  id          String    @id @default(uuid())
  name        String    @unique
  email       String
  description String
  phone       Int
  latitude    Float
  longitude   Float
  evaluation  Float?
  // commantaire String[]
  categorie   Categorie @relation(fields: [categorieId], references: [name])
  categorieId String
}
